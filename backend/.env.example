# ===========================================
# CalenFit Backend - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# Database Configuration
# For local development: postgresql://user:password@localhost:5432/calenfit?schema=public
# For Railway/Render: Use the connection string provided by the service
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/calenfit?schema=public"

# JWT Configuration
# IMPORTANT: Change these secrets in production!
JWT_ACCESS_SECRET="your-super-secret-access-key-change-in-production-min-32-chars"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production-min-32-chars"
JWT_ACCESS_EXPIRATION="15m"
JWT_REFRESH_EXPIRATION="7d"

# Server Configuration
PORT=3001

# CORS - Frontend URL
FRONTEND_URL="http://localhost:3000"
