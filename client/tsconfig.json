{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components": ["./components"],
      "@/components/*": ["./components/*"],
      "@/lib": ["./lib"],
      "@/lib/*": ["./lib/*"],
      "@/hooks": ["./lib/hooks"],
      "@/hooks/*": ["./lib/hooks/*"],
      "@/types": ["./types"],
      "@/types/*": ["./types/*"],
      "@/config": ["./config"],
      "@/config/*": ["./config/*"],
      "@/constants": ["./lib/constants"],
      "@/messages": ["./lib/messages"],
      "@/utils": ["./lib/utils"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
